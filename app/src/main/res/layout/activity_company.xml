<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.company.CompanyActivity">
    <include
        layout="@layout/toolbar_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarref"/>

    <RelativeLayout
        android:id="@+id/company_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.company.CompanyActivity"
        android:layout_below="@id/toolbarref">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_menu_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="?android:attr/windowBackground"
            app:menu="@menu/bottom_nav_company" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_menu_company">

        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>